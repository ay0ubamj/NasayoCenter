<div class="page-content">
  <div class="container">
    <div class="mt-lg-5 uk-grid uk-grid-stack" uk-grid="">
      <div class="uk-width-expand@m uk-first-column">
        <div class="section-header mb-lg-3">
          <div class="section-header-left">
            <h2>Courses</h2>
          </div>
        </div>
        
        <div class="uk-child-width-1-4@m uk-child-width-1-3@s course-card-grid uk-grid-match uk-grid" uk-grid="">
          {% for formation in formations%}
            <div class="uk-first-column">
              <a href="{{ path('course', {'slug': formation.slug}) }}">
                <div class="course-card">
                  <div class="course-card-thumbnail">
                    <img src="..\assets\images\course\2.png" />
                    <span class="play-button-trigger"></span>
                  </div>
                  <div class="course-card-body">
                    <h4>{{ formation.nomformation }}</h4>
                    <p>{{ formation.description|u.truncate(150, '....', false) }}</p>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %} 
        </div>

        {% do formations.setPageRange(2) %}
        {{ knp_pagination_render(formations, 'base/pagination.html.twig') }}
      </div>
    </div>
  </div>
</div>
