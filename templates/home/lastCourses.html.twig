<div class="section-small delimiter-top">
	<div class="container-small">
		<div class="text-center mb-5">
			<h3>Check out our newest</h3>
			<h5>
				With our growing catalog of over 30 Nanodegree programs from beginner to
				        advanced
			</h5>
		</div>
		<div class="course-grid-slider mt-lg-5" uk-slider="finite: true">
			<div class="uk-slider-container pb-3">
				<ul class="uk-slider-items uk-child-width-1-2@s uk-child-width-1-3@m uk-grid">
					{% for formation in formations %}
						<li>
							<a href="{{ path('course', {'slug': formation.slug}) }}">
								<div class="course-card">
									<div class="course-card-thumbnail">
										<img src="{{ vich_uploader_asset(formation, 'imageFile') }}"/>
										<span class="play-button-trigger"></span>
									</div>
									<div class="course-card-body">
										<h4>{{ formation.nomformation }}</h4>
										<p>{{ formation.description|u.truncate(150, '....', false) }}</p>
									</div>
								</div>
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="text-center">
			<a href="{{ path('courses') }}" class="btn btn-soft-light btn-small btn-circle">View More Courses</a>
		</div>
	</div>
</div>
