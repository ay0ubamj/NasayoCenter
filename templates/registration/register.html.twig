<!doctype html>
<html>
<head>
    <title>{% block title %}NasayoCenter - Register{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset("assets/css/style.css") }}">
        <link rel="stylesheet" href="{{ asset("assets/css/night-mode.css") }}">
        <link rel="stylesheet" href="{{ asset("assets/css/framework.css") }}">
        <link rel="stylesheet" href="{{ asset("assets/css/bootstrap.css") }}">
        <link rel="stylesheet" href="{{ asset("assets/css/icons.css") }}">
    {% endblock %}
</head>


<body>
    <!-- Content -->
    <div uk-height-viewport="" class="uk-flex uk-flex-middle">
        <div class="uk-width-2-3@m uk-width-1-2@s m-auto rounded">
            <div class="uk-child-width-1-2@m uk-grid-collapse bg-gradient-grey" uk-grid="">

                <!-- column one -->
                <div class="uk-margin-auto-vertical uk-text-center uk-animation-scale-up p-3 uk-light">
                    <a href="{{ path('home') }}"><i class=" uil-graduation-hat icon-large"></i></a>
                    <a href="{{ path('home') }}"><h3 class="mb-4"> Nasayo Center</h3></a>
                    <p>The right place where you can learn every thing ! </p>
                </div>

                <!-- column two -->
                    <div class="uk-card-default p-5 rounded">
                        <div class="mb-4 uk-text-center">
                            <h3 class="mb-0"> Create new Account</h3>
                            <p class="my-2">Login to manage your account.</p>
                        </div>

                    {{ form_start(registrationForm, {'attr': {'class': 'uk-child-width-1-1 uk-grid-small', 'uk-grid': ''}}) }}
                        
                        <div class="uk-width-1-2@s">
                            <div class="uk-form-group">
                                {{ form_label(registrationForm.nom, 'First Name', {'label_attr': {'class': 'uk-form-label'}}) }}
                                <div class="uk-position-relative w-100">
                                    <span class="uk-form-icon">
                                        <i class="icon-feather-user"></i>
                                    </span>
                                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'uk-input', 'placeholder': 'Brice'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="uk-width-1-2@s">
                            <div class="uk-form-group">
                                {{ form_label(registrationForm.prenom, 'Last Name', {'label_attr': {'class': 'uk-form-label'}}) }}
                                
                                <div class="uk-position-relative w-100">
                                    <span class="uk-form-icon">
                                        <i class="icon-feather-user"></i>
                                    </span>
                                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'uk-input', 'placeholder': 'Pitre'}}) }}
                                </div>

                            </div>
                        </div>
                        <div>
                            <div class="uk-form-group">
                                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'uk-form-label'}}) }}

                                <div class="uk-position-relative w-100">
                                    <span class="uk-form-icon">
                                        <i class="icon-feather-mail"></i>
                                    </span>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'uk-input', 'placeholder': 'name@exemple.com'}}) }}
                                </div>

                            </div>
                        </div>
                        
                        {{ form_errors(registrationForm.plainPassword.first) }}
                        <div class="uk-width-1-2@s">
                            <div class="uk-form-group">
                                
                                {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'uk-form-label'}}) }}

                                <div class="uk-position-relative w-100">
                                    <span class="uk-form-icon">
                                        <i class="icon-feather-lock"></i>
                                    </span>
                                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'uk-input', 'placeholder': '*********'}}) }}
                                </div>

                            </div>
                        </div>
                        {{ form_errors(registrationForm.plainPassword.second) }}
                        <div class="uk-width-1-2@s">
                            <div class="uk-form-group">
                                {{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'uk-form-label'}}) }}

                                <div class="uk-position-relative w-100">
                                    <span class="uk-form-icon">
                                        <i class="icon-feather-lock"></i>
                                    </span>
                                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'uk-input', 'placeholder': '*********'}}) }}
                                </div>

                            </div>
                        </div>

                        <div>
                            <div class="mt-4 uk-flex-middle uk-grid-small" uk-grid="">
                                <div class="uk-width-expand@s">
                                    <p>You already have an account ?<a href="{{ path('app_login') }}"> Login</a></p>
                                </div>
                                <div class="uk-width-auto@s">
                                    <input type="submit" class="btn btn-default" value="Sign up">
                                </div>
                            </div>
                        </div>

                    {{ form_end(registrationForm) }}
                </div><!--  End column two -->

            </div>
        </div>
    </div>

    <!-- Content -End -->

    {% block javascripts %}
        <script src="{{ asset("assets/js/framework.js") }}"></script>
        <script src="{{ asset("assets/js/jquery-3.3.1.min.js") }}"></script>
        <script src="{{ asset("assets/js/simplebar.js") }}"></script>
        <script src="{{ asset("assets/js/mmenu.min.js") }}"></script>
        <script src="{{ asset("assets/js/night.js") }}"></script>
        <script src="{{ asset("assets/js/main.js") }}"></script>
    {% endblock %}


</body>

</html>