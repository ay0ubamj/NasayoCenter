<div class="page-content">
    <div class="profile-container">
        <div class="page-content-inner uk-light pb-0">
            <div class="profile-layout">
                <div class="res-circle" style="width: 11%;">
                    <div class="circle-txt">{{ app.user.nom|first }}{{ app.user.prenom|first }}</div>
                </div>
                <div class="profile-layout-content">
                    <h2>{{ app.user.nom }} {{ app.user.prenom }}</h2>
                </div>
            </div>
            <nav class="responsive-tab style-4">
            </nav>
        </div>
    </div>

    <div class="page-content-inner">
        <div class="section-small">
            <h4 class="mb-lg-5">Enroled Courses</h4>
            {% if app.user.formations is empty %}
                <p class="uk-text-center uk-text-lead uk-text-info">You are not registered in any course yet!</p>
            {% else %}
                {% for uformation in app.user.formations%}
                    <div class="uk-child-width-1-4@m uk-child-width-1-3@s course-card-grid uk-grid" uk-grid="">
                        <div class="uk-first-column">
                            <a href="#">
                                <div class="course-card">
                                    <div class="course-card-thumbnail ">
                                        <img src="..\assets\images\course\2.png">
                                    </div>
                                    <div class="course-card-body">
                                        <h4>{{ uformation.nomformation }}</h4>
                                        <p>{{ uformation.description|u.truncate(150, '....', false) }}</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>



    </div>

</div>